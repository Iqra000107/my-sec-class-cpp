#include<iostream>
using namespace std;
int main()
{
	float temp[7];
	int cold=temp[0];
	int hot = temp[0];
	int count = 0;
	for (int i = 0; i < 7; i++) {
		cout << "enter the temp";
		cin >> temp[i];
	}
	for (int i = 0; i < 7; i++) {
		cout << "day" << i + 1 << temp[i];
		cout << endl;

		if (temp[i] > 37.5) {
			count+=temp[i];
		}
	}
		cout << "days had temp above 37.5" << count << endl;
	
		for (int i = 0; i < 7; i++) {
			if (temp[i] < cold) {
				cold = temp[i];
			}
			if (temp[i] > hot) {
				hot = temp[i];
			}
		}
	cout << "coldest day" << cold << endl;
	cout << "hottest day" << hot << endl;
	return 0;
}
